<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <Button
        android:id="@+id/btn_tween_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tween_alpha"/>
    <Button
        android:id="@+id/btn_tween_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tween_translate"/>
    <Button
        android:id="@+id/btn_tween_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tween_rotate"/>
    <Button
        android:id="@+id/btn_tween_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tween_scale"/>

</LinearLayout>
